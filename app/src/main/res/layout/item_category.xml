<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.myapplication.viewModel.ArticleViewModel" />

        <variable
            name="category"
            type="com.example.myapplication.model.Category" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="categoryId"
            type="java.util.List&lt;Integer>" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/linear_layout_category"
        android:onClick="@{() -> viewModel.onCategoryClicked(category.id)}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_view_category_item"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="جراحی"
            android:textSize="20sp"
            android:gravity="center" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.10dp"
            android:background="@color/lineColor" />

    </LinearLayout>
</layout>