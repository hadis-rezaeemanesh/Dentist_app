<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="comment"
            type="com.example.myapplication.model.modelTest.CommentsItem" />

        <variable
            name="viewModel"
            type="com.example.myapplication.viewModel.ArticleViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="5dp"
        android:id="@+id/constraint_layout_comments">

        <TextView
            android:id="@+id/txt_view_name_comment_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{comment.user}"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_comment_user"
            android:layout_margin="5dp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{comment.createdAt}"
            android:textColor="@color/lineColor" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_bar_comments"
            app:layout_constraintTop_toBottomOf="@id/txt_view_name_comment_user"
            app:layout_constraintEnd_toEndOf="@id/txt_view_name_comment_user"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:isIndicator="true"
            android:layoutDirection="rtl"
            android:max="5"
            android:rating="4"
            android:theme="@style/RatingBar"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_view_comment_user"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating_bar_comments"
            android:text="@{comment.comment}"
            android:textColor="@color/black" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barrier_comment"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="txt_view_comment_user"
            app:layout_constraintTop_toBottomOf="@id/txt_view_comment_user"
            android:layout_margin="5dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/lineColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_comment"
            android:layout_margin="5dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>