<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.myapplication.viewModel.ArticleViewModel" />
        <variable
            name="position"
            type="Integer" />

        <variable
            name="item"
            type="com.example.myapplication.model.ArticlesItem" />

        <variable
            name="articleIdList"
            type="java.util.List&lt;Integer&gt;" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/share_rounded_corner_with_border"
        android:layout_margin="5dp"
        android:id="@+id/constraint_layout_item"
        android:onClick="@{() -> viewModel.onArticleClicked(item.id)}"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_view_item_education"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/rounded_corner"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            android:textColor="@android:color/black"
            android:id="@+id/txt_view_title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:paddingTop="30dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toStartOf="@id/img_view_item_education"
            app:layout_constraintTop_toTopOf="@id/img_view_item_education"
            />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barrier_comment"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="txt_view_title, img_view_calender"
            android:layout_margin="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_view_date"
            app:layout_constraintStart_toEndOf="@id/img_view_calender"
            app:layout_constraintBottom_toBottomOf="@id/img_view_item_education"
            android:text="@{item.createdAt}"
            android:textSize="10sp"
            android:padding="1dp"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_view_date"
            android:layout_marginLeft="3dp"
            android:padding="1dp"
            android:src="@drawable/ic_calender"

            app:layout_constraintBottom_toBottomOf="@id/img_view_item_education"
            android:id="@+id/img_view_calender" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>