<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/dialog_rounded_corner"
            android:orientation="vertical"
            tools:context=".view.fragment.CategoryDialogFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_view_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="دسته بندی"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/image_button_cancel_category"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/image_button_cancel_category"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_cancel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.10dp"
                android:background="@color/lineColor"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_view_category_all"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:text="همه"
                android:textSize="20sp"
                android:gravity="center" />

            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="0.10dp"
                android:background="@color/lineColor" />


         <androidx.recyclerview.widget.RecyclerView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/recycler_view_category" />




        </LinearLayout>

</layout>