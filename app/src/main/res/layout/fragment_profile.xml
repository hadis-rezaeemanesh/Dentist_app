<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.ProfileFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rectangle_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/rectangle_shape_profile" />


        <ImageView
            android:id="@+id/corner_shape"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/profile_corner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rectangle_shape" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_view_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/profile_circle"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:src="@drawable/ic_users_club" />

        <TextView
            android:id="@+id/user_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_view_profile"
            android:text="user name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/phone_number_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_name_profile"
            android:text="phone number"
            android:textColor="@color/textColorSecond"
            android:textSize="14sp"
            android:padding="5dp" />

        <LinearLayout
            android:id="@+id/linear_layout_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/share_rounded_corner_with_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layoutDirection="rtl"
            android:layout_margin="10dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/phone_number_profile">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user_profile"
                android:padding="3dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ویرایش پروفایل"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:padding="3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_left_arrow"
                android:padding="3dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout_edit_dentist_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/share_rounded_corner_with_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layoutDirection="rtl"
            android:layout_margin="10dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_edit_profile">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pencil"
                android:padding="3dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ویرایش سوابق پزشکی و دندان پزشکی"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:padding="3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_left_arrow"
                android:padding="3dp" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>