<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myapplication.view.fragment.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_ticketFragment"
            app:destination="@id/ticketFragment" />
        <action
            android:id="@+id/action_homeFragment_to_educationFragment2"
            app:destination="@id/educationFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.myapplication.view.fragment.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_locaterFragment"
            app:destination="@id/locaterFragment" />
    </fragment>
    <fragment
        android:id="@+id/locaterFragment"
        android:name="com.example.myapplication.view.fragment.LocaterFragment"
        android:label="LocaterFragment" >
        <action
            android:id="@+id/action_locaterFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/ticketFragment"
        android:name="com.example.myapplication.view.fragment.TicketFragment"
        android:label="fragment_ticket"
        tools:layout="@layout/fragment_ticket" >
        <action
            android:id="@+id/action_ticketFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.myapplication.view.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.myapplication.view.fragment.ArticleFragment"
        android:label="ArticleFragment" />
    <fragment
        android:id="@+id/educationFragment"
        android:name="com.example.myapplication.view.fragment.EducationFragment"
        android:label="EducationFragment" >
        <action
            android:id="@+id/action_educationFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
        <action
            android:id="@+id/action_educationFragment_to_categoryDialogFragment"
            app:destination="@id/categoryDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryDialogFragment"
        android:name="com.example.myapplication.view.fragment.CategoryDialogFragment"
        android:label="CategoryDialogFragment" >
        <action
            android:id="@+id/action_categoryDialogFragment_to_educationFragment"
            app:destination="@id/educationFragment" />
    </fragment>
</navigation>